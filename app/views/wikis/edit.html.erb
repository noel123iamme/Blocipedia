<h1>Edit Wiki</h1>
 
<div class="row">
  <div class="col-md-8">
    <%= render partial: 'form', locals: { wiki: @wiki } %>
  </div>
</div>
<br>
<h3>Manage Collaborators</h3>
<div class='js-collaborator'>
  <%= render partial: 'collaborators/collaborator', collection: @collaborators %>
</div>
<br>
<% if current_user.admin? || (current_user.premium? && @wiki.user == current_user) %>
  <div class='new-collaborator'>
    <%= render partial: 'collaborators/form', locals: { collaborator: @new_collaborator } %>
  </div>
<% end %>