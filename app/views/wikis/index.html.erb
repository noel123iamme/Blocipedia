<h1>All Wikis</h1>
<% if policy(Wiki).create? %>
  <%= link_to "New Wiki", new_wiki_path, class: 'btn btn-success' %>
<% end %>
<% @wikis.each do |wiki| %>
  <div class="media">
    <div class="media-body">
      <h4 class="media-heading">
        <p><%= link_to markdown_to_html(wiki.title), wiki_path(wiki.id) %></p>
      <small>
         submitted <%= time_ago_in_words(wiki.created_at) %> ago by
         <%= wiki.user.name %>
      </small>
      </h4>
    </div>
  </div>
<% end %>
